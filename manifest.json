{
  "manifest_version": 2,

  "name": "vTransIt",
  "description": "为Web而生，灵活简单的翻译工具",
  "version": "1.3.0",

  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "background": {
    "scripts":[
      "libs/vue.min.js",
      "libs/vue-resource.min.js",
      "libs/howler.min.js",
      "background.js"
      ]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches" : [
        "https://www.shanbay.com/*"
      ],
      "js": [
        "libs/vue.min.js",
        "content.js"
      ],
      "css" : ["content.css"],
      "all_frames": true
    }
  ],
  
  "browser_action": {
    "default_icon": "images/icon48.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "cookies",
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "http://fanyi.youdao.com/openapi.do",
    "https://api.shanbay.com/",
    "http://www.shanbay.com/",
    "https://words-audio.oss.aliyuncs.com/"
  ],
  
  "web_accessible_resources": [
    "libs/vue.min.js",
    "libs/vue-resource.min.js",
    "libs/howler.min.js"
    ]
}
